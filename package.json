{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:ssr": "vite build --ssr",
        "prettier": "prettier --write \"resources/**/*.{js,vue,css}\" \"*.{js,json}\"",
        "pint": "php vendor/bin/pint . --config=pint.json",
        "rector": "php vendor/bin/rector process",
        "analyse": "php vendor/bin/phpstan analyse --memory-limit=8G",
        "lint": "eslint resources/js --fix",
        "lint:check": "eslint resources/js",
        "format": "npm run prettier && npm run pint && npm run lint"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@tailwindcss/vite": "^4.1.12",
        "@vitejs/plugin-vue": "^6.0.1",
        "axios": "^1.11.0",
        "concurrently": "^9.2",
        "eslint": "^9.33.0",
        "eslint-plugin-unused-imports": "^4.2.0",
        "eslint-plugin-vue": "^10.4.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^2.0.0",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-attributes": "^1.0.0",
        "prettier-plugin-organize-imports": "^4.2.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.12",
        "vite": "^7.1.3",
        "vue-eslint-parser": "^10.2.0"
    },
    "dependencies": {
        "@heroicons/vue": "^2.2.0",
        "@inertiajs/vue3": "^2.1.2",
        "@sentry/tracing": "^7.120.4",
        "@sentry/vite-plugin": "^4.1.1",
        "@sentry/vue": "^10.5.0",
        "@vue/server-renderer": "^3.5.18",
        "vue": "^3.5.18",
        "ziggy-js": "^2.5.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.46.4",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.1.12",
        "lightningcss-linux-x64-gnu": "^1.30.1"
    },
    "lint-staged": {
        "resources/js/**/*.{js,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.{css,scss,html,json,md}": [
            "prettier --write"
        ],
        "**/*.php": [
            "php ./vendor/bin/pint --config=pint.json"
        ]
    }
}
